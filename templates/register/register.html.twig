{% extends 'base.html.twig' %}

{% block body %}
    <body style="background-color: #e6e6e6">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Регистрация</h5>
                            {{ form_start(form) }}

                            {{ form_row(form.name, {'label': 'Имя'}) }}

                            {{ form_row(form.email, {'label': 'Почта'}) }}

                            {{ form_row(form.password, {'label': 'Пароль'}) }}

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

{% endblock %}